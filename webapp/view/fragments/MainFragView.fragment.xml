<core:FragmentDefinition id="fragPageMV" xmlns:core="sap.ui.core" xmlns="sap.m" controllerName="zmwhumng.controller.HUMainView">
	<Page id="pageMV" showHeader="false" class="page">
		<Bar id="barMVHdr" class="barHdr">
			<contentMiddle>
				<Text id="titleMVHdr" text="{i18n>title}" class="title"/>
			</contentMiddle>
		</Bar>
		<VBox id="vbMVScan" class="sapUiSmallMarginTop sapUiSmallMarginBegin sapUiSmallMarginEnd">
			<Text id="txtMVScan" text="{i18n>txtMVScan}" class="lblInputSearch"/>
			<Input id="inMVScan" width="100%" class="sapUiTinyMarginTop" submit="onMVScan" value="{mHUSett>/EXIDV}"/>
		</VBox>
		<footer>
			<Bar id="barMVFragFoo">
				<contentMiddle>
					<Button id="btnCreateHU" icon="sap-icon://add" text="{i18n>btnCreateHU}" width="100%" class="btnFoo"/>
				</contentMiddle>
			</Bar>
		</footer>
	</Page>
</core:FragmentDefinition>