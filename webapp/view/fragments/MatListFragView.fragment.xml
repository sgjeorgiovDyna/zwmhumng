<core:FragmentDefinition id="fragMatList" xmlns:core="sap.ui.core" xmlns="sap.m" controllerName="zmwhumng.controller.HUMainView">
	<Page id="pageMatList" showHeader="false">
		<Bar id="barMatListHdr">
			<contentLeft>
				<Button id="btnNavToScanDoc" icon="sap-icon://paging" press="onNavTo($event ,'pageDocScan')"/>
			</contentLeft>
			<contentMiddle>
				<Title id="titleMatListHdr" text="{i18n>title}"/>
			</contentMiddle>
		</Bar>
		<HBox id="hboxList" width="100%" class="sapUiSmallMargin">
			<HBox id="hboxListNo" width="40%" alignItems="Center">
				<Label id="lblListNo" text="{i18n>lblListNo}" class="sapUiTinyMarginEnd"/>
				<Text id="txtListNo" text="{mHUSett>/LISTNO}"/>
			</HBox>
			<HBox id="hboxFrom" width="30%">
				<VBox id="vboxFrom">
					<Label id="lblFrom" text="{i18n>lblFrom}"/>
					<Text id="txtFrom" text="{mHUSett>/FROM}"/>
				</VBox>
			</HBox>
			<HBox id="hboxDest" width="30%">
				<VBox id="vboxDest">
					<Label id="lblDest" text="{i18n>lblDest}"/>
					<Text id="txtDest" text="{mHUSett>/DEST}"/>
				</VBox>
			</HBox>
		</HBox>
		<Table id="tabListDocScan" class="sapUiSmallMarginTop sapUiSmallMarginEnd" width="100%" items="{mHUDoc>/}">
			<columns>
				<Column id="colListDocScanHU">
					<Text id="colTxtListDocScanHU" text="{i18n>colTxtDocScanHU}"/>
				</Column>
				<Column id="colListDocScanDlv">
					<Text id="colTxtListDocScanDoc" text="{i18n>colTxtDocScanDoc}"/>
				</Column>
				<Column id="colListDocScanDesc">
					<Text id="colTxtListDocScanDesc" text="{i18n>colTxtDocScanDesc}"/>
				</Column>
				<Column id="colListDocScanQty">
					<Text id="colTxtListDocScanQty" text="{i18n>colTxtDocScanQty}"/>
				</Column>
			</columns>
			<items>
				<ColumnListItem id="colListItmListDocScan">
					<Text id="txtListDocScanU" text="{mHUDoc>EXIDV}"/>
					<Text id="txtListDocScanDlv" text="{mHUDoc>VBELN}"/>
					<Text id="txtListDocScanDesc" text="{mHUDoc>VTEXT}"/>
					<Text id="txtListDocScanQty" text="{mHUDoc>KWMENG} {mHUDoc>MEINS}"/>
				</ColumnListItem>
			</items>
		</Table>
		<VBox id="vboxMatSearch" width="93%" class="sapUiSmallMargin">
			<Label id="lblMatSearch" text="{i18n>lblMatHdr}"/>
			<Input id="inMatSearch"/>
		</VBox>
		<List id="listMat" width="100%" mode="MultiSelect" items="{mMatList>/}" selectionChange="onItmSel">
			<headerToolbar>
				<Toolbar id="toolbarListMat">
					<Text id="txtListMat" text="{i18n>txtListMat}"/>
					<ToolbarSpacer id="tbsListMat"/>
					<CheckBox id="cbSelAll" text="Select/Deselect" selected="{mHUSett>/SELALL}" select="onSelAll"></CheckBox>
					<!-- <Button id="btnSelAll" icon="sap-icon://multiselect-all" type="Neutral"/> -->
				</Toolbar>
			</headerToolbar>
			<CustomListItem id="listItmMat" selected="{mMatList>SEL}">
				<VBox id="vboxMat" width="100%" class="sapUiSmallMargin">
					<HBox id="hboxMatHdr" width="100%" renderType="Bare">
						<Label id="lblMatHdr" text="{i18n>lblMatHdr}" width="25%"/>
						<Label id="lblMatDescHdr" text="{i18n>lblMatDescHdr}" width="35%"/>
						<Label id="lblMatQtyHdr" text="{i18n>lblMatQtyHdr}" width="25%"/>
						<Label id="lblMatMoveHdr" width="10%"/>
					</HBox>
					<HBox id="hboxMatVal" width="100%" renderType="Bare">
						<Text id="txtMatVal" text="{mMatList>MATNR}" width="25%"/>
						<Text id="txtMatDescVal" text="{mMatList>MAKTX}" width="35%"/>
						<Text id="txtMatQtyVal" text="{mMatList>KWMENG} {mMatList>/MEINS}" width="25%"/>
						<core:Icon id="iconMoveMat" src="sap-icon://cart" width="10%"/>
					</HBox>
					<HBox id="hboxMatHdr1" width="100%" renderType="Bare" class="sapUiTinyMarginTop">
						<Label id="lblOrd" text="{i18n>lblOrd}" width="25%"/>
						<Label id="lblPos" text="{i18n>lblPos}" width="35%"/>
						<Label id="lblList" text="{i18n>lblList}" width="25%"/>
						<Label id="lblMatMoveHdr1" width="10%"/>
					</HBox>
					<HBox id="hboxMatVal1" width="100%" renderType="Bare">
						<Text id="txtOrdVal" text="{mMatList>VBELN}" width="25%"/>
						<Text id="txtPosVal" text="{mMatList>POSNR}" width="35%"/>
						<Text id="txtListVal" text="{mMatList>LIST}" width="25%"/>
						<Text id="txtMove" width="10%"/>
					</HBox>
				</VBox>
			</CustomListItem>
		</List>
		<footer>
			<Bar id="barMatListFragFoo">
				<contentMiddle>
					<Button id="btnMatListCreateHU" icon="sap-icon://add" text="{i18n>btnCreateHU}" width="100%"/>
					<Button id="btnMatListMove" text="{i18n>btnDocScanMove}" type="Emphasized" width="100%" enabled="false"/>
				</contentMiddle>
			</Bar>
		</footer>
	</Page>
</core:FragmentDefinition>